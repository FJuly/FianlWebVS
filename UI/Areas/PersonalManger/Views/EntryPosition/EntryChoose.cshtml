@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Areas/PersonalManger/CSS/bootstrap.min.css" rel="stylesheet" />
    <title>职位选择</title>
    <script src="~/Areas/PersonalManger/JS/jquery-1.3.1.js"></script>
    <style type="text/css">
        td { text-align: center; }
        th { text-align: center; }
    </style>
    <script type="text/javascript">

        function send(role, oprate) {
            var url = "";
            if (oprate == "Entry") {
                url = "/PersonalManger/EntryPosition/EntryPosition?role="+role;
            } else {
                url = "/PersonalManger/EntryPosition/DelPosition?role="+role;
            }
            window.location = url;
        }
    </script>
</head>
<body style="font-family: 'Microsoft YaHei'; background-color: rgb(237,241,249); font-size: 12px">
    <div style="margin: 0 auto; width: 900px; margin-top: 20px">

        <div class="panel panel-success">
            <!-- Default panel contents -->
            <div class="panel-heading">查看职位</div>

            <!-- Table -->
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>职位</th>
                        <th>查看</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <th scope="row">1</th>
                        <td>所有职位</td>
                        <td>
                            <a class="btn btn-success btn-sm btn-sm" style="width: 80px;" href="/PersonalManger/CheckMember/BrowserPosition">查看</a>
                        </td>
                </tbody>
            </table>
        </div>
        <div class="panel panel-default panel-success">
            <div class="panel-heading">选择职位</div>

            <!-- Table -->
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>职位</th>
                        <th>录入</th>
                        <th>删除</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in ViewBag.Role)
                    {
                      <tr>
                        <th scope="row">1</th>
                        <td>@role.RoleName</td>
                        <td>
                            <button class="btn btn-success btn-sm btn-sm" style="width: 80px;" onclick="send(@role.RoleId,'Entry')">录入</button>
                        </td>
                        <td>
                            <button class="btn  btn-danger btn-sm btn-sm" style="width: 80px; margin-left: 20px" onclick="send(@role.RoleId,'Del')">删除</button>
                        </td>
                    </tr>                         
                    }
                    @if (ViewBag.Dep != null)
                    {
                    <tr>
                        <th scope="row">1</th>
                        <td>部门成员</td>
                        <td>
                            <button class="btn btn-success btn-sm btn-sm" style="width: 80px;" onclick="send(@ViewBag.Dep,'Entry')">录入</button>
                        </td>
                        <td>
                            <button class="btn  btn-danger btn-sm btn-sm" style="width: 80px; margin-left: 20px" onclick="send(@ViewBag.Dep,'Del')">删除</button>
                        </td>
                    </tr>              
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
