@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/PersonalManger/CSS/EntryPosition.css" rel="stylesheet" />
    <script src="~/Areas/PersonalManger/JS/jquery-1.3.1.js"></script>
    <script src="~/Areas/PersonalManger/JS/EntryPosition.js"></script>
    <title>Index</title>
    <script>
        //select改变事件函数
        function check() {
            var role=$('#input-text option:selected').val();//选中的值
            $.Init(role);
        }
    </script>
</head>
<body>
    <div class="head">
        <div class="head-nav">
            <div class="head-nav-img"></div>
            <div class="head-nav-text">成员信息</div>
        </div>
    </div>
    @*------------------------------------中间搜索框-----------------------------------*@
    <div class="toolbar">
        <div class="search">
            <button class="ser-btn">职位</button>
            <div id="div-input">
                <select id="input-text" style="border: 1px solid none; width: 152px" onchange="check()">
                    <option value="10001">总裁</option>
                    <option value="10002">部长</option>
                    <option value="10003">学习顾问团团长</option>
                    <option value="10004">学习顾问团团员</option>
                    <option value="10005">活动策划组组长</option>
                    <option value="10006">活动策划组组员</option>
                    <option value="10007">财务主管</option>
                    <option value="10008">实习生</option>
                    <option value="10009">正式成员</option>
                </select>
            </div>
        </div>
    </div>


    @* -------------------表格----------------------------------------------------------*@
    <div class="table-self">
        <table class="table-hover" id="table" style="font-family: 'Microsoft YaHei'">
            <thead>
                <tr class="thead-tr">
                    <th id="head-th-first"></th>
                    <th>学号</th>
                    <th>姓名</th>
                    <th>联系方式</th>
                    <th>专业</th>
                    <th>所属部门</th>
                    <th>技术水平</th>
                </tr>
            </thead>
            <tbody id="body">
            </tbody>
        </table>
    </div>
    @*----------------------------------分页条--------------------------------------------------------------------*@
    <div style="width: 1056px; height: 35px; border: 1px RGB(166,199,203) solid; background-color: rgb(215,232,234)">
        <select class="select-pagesize ">
            <option>10</option>
        </select>
        <div class="div-line"></div>
        <a class="a-first" href="###"></a>
        <a class="a-pre" href="###"></a>
        <label class="lable-text">第</label>
        <span class="lable-page"></span>
        <label class="lable-text" style="margin-left: 5px">页</label>
        <label class="lable-text" id="lable-page-sum" style="margin-left: 5px"></label>
        <a class="a-next" href="###"></a>
        <a class="a-last" href="###"></a>
        <div class="div-line"></div>
        <a class="a-refresh" href="###"></a>
        <label class="lable-text-right">显示1到10，总计15条记录</label>
    </div>
</body>
</html>
